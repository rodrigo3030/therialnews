<div class="row py-5">
  <div class="col-12">
    <h2 class="text-center">Noticia #<%= @news.id %></h2>
  </div>
</div>

<div class="row py-5">
  <p style="color: green"><%= notice %></p>
  <div class="card">
    <img src='<%= @news.imagen %>' class="card-img-top" style="width: 100%; height:350px;">
    <div class="card-body">
      <%= render @news %>
    </div>
  </div>  
</div>

<div class="row py-5">
  <h4 class="text-center">Comentarios:</h4>
  <% @comments.each do |comment| %>
    <div>
      <p><%= comment.content %></p>
      <footer class="blockquote-footer">Autor: <cite title="Source Title"><%= comment.user.email %></cite></footer>
    </div>
    <hr>
    <% if current_user.role == User.roles.key(2).to_s %>
      <div class="col-12">
        <%= button_to "Elimina el comentario", comment_path(comment), method: :delete, class: "btn btn-danger w-100" %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="row py-5">
  <div class="col-12">
    <%= link_to 'Comenta', "/comments/new?noticia=#{@news.id}", class: 'btn btn-success w-100' %>
  </div>
</div>

<div class="row py-5">
  <div class="col-4">
    <%= link_to "Vuelve a las noticias", root_path, class: "btn btn-primary w-100" %>
  </div>
  <div class="col-4">
    <%= link_to "Edita la noticia", edit_news_path(@news), class: "btn btn-warning w-100" %>
  </div>
  <div class="col-4">
    <%= button_to "Elimina la noticia", @news, method: :delete, class: "btn btn-danger w-100" %>
  </div>
</div>